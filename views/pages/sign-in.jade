//- *** LAYOUT ***
//- ---------------------
extends ../layouts/layout

//- *** MAIN ***
//- ---------------------
block page
  form(method='POST' action='/sign-in' data-abide)
    
    .row
      .columns.small-12.medium-6
        .name-field
          label
            input(type='email' placeholder='Your email' autofocus required)
          small.error Enter your email address

      .columns.small-12.medium-6
        label
          input(type='password' placeholder='Your password' required)
        small.error Enter your password

    .row
      .columns.small-12
          button.expand.large Sign-in