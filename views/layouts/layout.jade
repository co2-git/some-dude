block document
  
  //- Doctype
  doctype html

  //- Encoding
  meta(charset='utf-8')

  block meta

    //- Title
    title=config.title

    //- IE
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    //- Viewport
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    block meta-robot
      //- Meta title
      meta(name='title' content=title)

      //- Meta description
      meta(name='description' content=description)

    //- Environment
    meta(env=env)

  //- Stylesheets
  block stylesheets
    link(rel='stylesheet' href='/cdn/css/francois.min.css')
    link(rel='stylesheet' href='/bower_components/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet' href='/vendors/LeaVerou/prism/prism.min.css')

  //- Banner
  header(role='banner')
    .row.collapse.my-top-bar
      .columns.small-9
        a(href='/')
          img(src='/cdn/images/face.png' style='width:32px; margin: 0 12px;')
          span some dude's blog
      .columns.small-3.text-right
        a.reveal-search(href='#')
          i.fa.fa-search
        - if ( page === 'post' )
          a(href)
            i.fa.fa-comment

  //- Page
  section(role='main')
    block page
    //
      .row
        .columns.small-12.medium-8
          block main
        .columns.small-12.medium-4
          block aside

  ///- Footer
  footer(role='contentinfo')
    .row
      .columns.small-12.text-center
        hr
        span=pkg.name 
        span  v
        span=pkg.version
        span  
        a(href='https://github.com/co2-git/some-dude' target='_blank') View on GitHub

  //- Scripts
  block scripts
    // script(src="http://cdn.sockjs.org/sockjs-0.3.min.js")

    script(src='/bower_components/jquery/dist/jquery.min.js')
    
    script(src='/cdn/js/foundation.min.js')

    script(src='/vendors/LeaVerou/prism/prism.min.js')
      
    - if ( env === 'production' )
      script(src='/cdn/js/app.min.js')
    - else
      script(src='/cdn/js/app.js')