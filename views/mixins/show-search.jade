mixin show-search ()
  form(name='search')
    input(type='search' placeholder='Search' autofocus)

    button.expand.radius
      i.fa.fa-search
      |   Search

    .row
      .columns.small-12

        h2
          i.fa.fa-language
          |  Languages

    .row
      .columns.small-12

        each language in languages
          a.button.language.small.small-12.large-6.columns(href='/search/language/' + language
            class=(_language && _language === language ? '': 'secondary'))=language