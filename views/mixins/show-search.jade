mixin show-search (isPost)
  // SEARCH FORM
  form(name='search' method='POST' action='/search')
    input(type='search' placeholder='Search' name='search' value=( search || ''))

    button.expand.radius
      i.fa.fa-search
      |   Search

    .row
      .columns.small-12

        h2
          i.fa.fa-language
          |  Languages

    .row
      .columns.small-12

        each lang in languages
          a.button.language.small.small-12.large-6.columns(href='/search/language/' + lang
            class=(language && language === lang ? '': 'secondary'))=lang

    - if ( ! isPost )
      .row
        .columns.small-12

          h2
            i.fa.fa-tags
            |  Tags

      .row
        .columns.small-12

          ul.tags
            each _tag in tags
              li
                big
                  i.fa.fa-tag
                  span  
                  a(href='/search/tag/' + _tag
                  class=(tag && tag === _tag ? '': 'secondary'))=_tag